{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./dist",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./dist",
        "target": "es5",
        "jsx": "react"
    },
    "include": ["src/**/*", "test/test", "tests", "test/grid-manager.test.ts"],
    "exclude": ["node_modules"]
}
